# ============================================================
# ðŸ§  Adaptive Intelligence Engine (Machine Learning)
# ============================================================

# Enable/Disable ML features globally
# Set to False to use traditional signal generator only
ML_ENABLED=true

# Auto-initialize ML engine on startup
# Requires sufficient historical trade data (recommended: 90+ days)
# If False, initialize manually via POST /api/ml/initialize
ML_AUTO_INITIALIZE=false

# Number of days of historical data to use for training
# Range: 30-180 days
ML_HISTORICAL_DAYS=90

# Auto-retrain model after N trades
# Set to 0 to disable auto-retraining
ML_AUTO_RETRAIN_TRADES=100

# Auto-retrain model every N days
# Set to 0 to disable periodic retraining
ML_AUTO_RETRAIN_DAYS=7

# ============================================================
# ðŸŽ¯ Advanced Trading Strategies
# ============================================================

# Default execution mode: static, sniper, pyramid, dca, hybrid
# static = traditional (1 entry, 1 exit)
# sniper = precise entries at key levels
# pyramid = scale into winners
# dca = dollar-cost average into losers
# hybrid = ML selects best mode per trade
EXECUTION_MODE_DEFAULT=hybrid

# Default margin mode: CROSSED or ISOLATED
MARGIN_MODE_DEFAULT=CROSSED

# Trailing Stop Default Mode: disabled, static, dynamic, profit_based, breakeven, smart
# smart = ML-enhanced trailing stop (recommended)
TRAILING_STOP_MODE_DEFAULT=smart

# Trailing stop activation threshold (% profit)
TRAILING_MIN_PROFIT_ACTIVATION_PCT=1.5

# Trailing stop base callback percentage
TRAILING_BASE_CALLBACK_PCT=2.0
